{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    // Preact specific settings
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    // Path aliases for absolute imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}

---
// PostList component for displaying posts with view count, date, and title
import { getCollection } from "astro:content";
// import ViewCounterRead from "./ViewCounterRead.astro";

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<div class="bg-white rounded-lg shadow-sm p-6">
  <h2 class="text-2xl font-semibold mb-6">Latest Blog Posts</h2>

  <ul class="space-y-6">
    {allPosts.map((post) => (
      <li class="border-b border-gray-100 pb-6 last:border-0">
        <div class="flex justify-between items-center text-sm text-gray-500 mb-2">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString()}
          </time>
        </div>
        <h3 class="text-xl font-medium mb-2">
          <a href={`/posts/${post.id}`} class="text-gray-800 hover:text-primary">
            {post.data.title || 'Untitled Post'}
          </a>
        </h3>
        {post.data.description &&
          <p class="text-gray-600">{post.data.description}</p>
        }
      </li>
    ))}
  </ul>
</div>
---
// PostList component for displaying posts with view count, date, and title
import { getCollection } from "astro:content";
import Link from "../Link.astro";
// import ViewCounterRead from "./ViewCounterRead.astro";

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<div class="max-w-3xl mx-auto py-8">
  <h2 class="text-2xl font-medium mb-6 text-gray-800 border-b pb-2">All Blog Posts</h2>

  <ul class="space-y-6 list-none">
    {allPosts.map((post) => (
      <li class="border-l-2 border-gray-200 pl-4 py-2 transition-all hover:border-indigo-500 hover:bg-gray-50 rounded-r">
        <div class="flex items-center text-sm text-gray-500 mb-1">
          <time datetime={post.data.pubDate.toISOString()} class="font-mono">
            {post.data.pubDate.toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric'})}
          </time>
        </div>
        <h3 class="text-lg font-medium mb-1">
          <Link href={`/posts/${post.id}`} class="text-gray-900 hover:text-indigo-600 no-underline">
            {post.data.title || 'Untitled Post'}
          </Link>
        </h3>
        {post.data.description &&
          <p class="text-gray-600 text-sm leading-relaxed">{post.data.description}</p>
        }
      </li>
    ))}
  </ul>
</div>
---
// Link component - A reusable component for all anchor links
// This centralizes our link styling and behavior

interface Props {
  href: string;
  external?: boolean;
  className?: string;
  title?: string;
}

const { 
  href, 
  external = false, 
  className = "",
  ...rest 
} = Astro.props;

// const anchorUrl = href;
// const thisSubAbs = Astro.url.pathname;
// const isActive = anchorUrl === thisSubAbs;
// External link attributes for security and UX
const externalAttrs = external 
  ? { target: "_blank", rel: "noopener noreferrer" } 
  : {};
---

<a 
  href={href} 
  class={className}
  {...externalAttrs}
  {...rest}
>
  <slot />
</a>

---
// Header component (shared across pages)
import { withBase } from '@/utils';
---

<header class="py-4 border-b border-gray-200">
  <div class="max-w-container mx-auto px-4">
    <div class="flex justify-between items-center">
      <div class="logo-nav">
        <h1><a href="/" class="text-gray-800 no-underline hover:text-primary">My Astro Blog</a></h1>
      </div>

      <div class="flex items-center justify-between gap-4">
        <!-- Social Links -->
        <div class="flex gap-4">
          <a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer" title="GitHub" class="text-gray-800 hover:text-primary">
            GitHub
          </a>
          <a href="https://twitter.com/yourusername" target="_blank" rel="noopener noreferrer" title="Twitter" class="text-gray-800 hover:text-primary">
            Twitter
          </a>
        </div>

        <!-- Search Form -->
        <div class="flex">
          <form id="search-form" action="/search" method="GET" class="flex">
            <input type="text" name="q" placeholder="Search..." aria-label="Search" class="py-2 px-3 border border-gray-300 rounded-l-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary" />
            <button type="submit" aria-label="Submit search" class="py-2 px-3 bg-primary text-white border-none rounded-r-md cursor-pointer hover:bg-secondary">Search</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Client-side search functionality
  document.addEventListener('DOMContentLoaded', () => {
    const searchForm = document.getElementById('search-form');

    searchForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      const formData = new FormData(searchForm as HTMLFormElement);
      const searchQuery = formData.get('q');

      if (searchQuery) {
        // For now, we'll just redirect to a search page with the query
        window.location.href = `/search?q=${encodeURIComponent(searchQuery as string)}`;
      }
    });
  });
</script>
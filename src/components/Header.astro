---
// Header component (shared across pages)
import Search from "astro-pagefind/components/Search";
---

<header class="h-16 border-b border-gray-200 bg-white">
  <div class="max-w-[900px] h-full mx-auto px-4 flex items-center justify-between">
    <div class="logo-nav">
      <h1 class="text-xl font-medium m-0"><a href="/" class="text-gray-800 no-underline hover:text-primary">My Astro Blog</a></h1>
    </div>

    <div class="flex items-center gap-6">
      <!-- Social Links -->
      <div class="hidden sm:flex gap-4">
        <a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer" title="GitHub" class="text-gray-800 hover:text-primary">
          GitHub
        </a>
        <a href="https://twitter.com/yourusername" target="_blank" rel="noopener noreferrer" title="Twitter" class="text-gray-800 hover:text-primary">
          Twitter
        </a>
      </div>

      <!-- Search Form -->
      <div class="w-48">
        <Search id="search" className="pagefind-ui" uiOptions={{ showImages: false }} />
      </div>
    </div>
  </div>
</header>
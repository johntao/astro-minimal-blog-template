---
import ViewCounter from "./ViewCounter.astro";

// MainContent component for the post detail center section
const { post, Content } = Astro.props;
const slug = Astro.params.slug || post.id;
---

<article class="prose lg:prose-lg max-w-none">
  <h1 class="text-3xl font-bold mb-4">{post.data.title}</h1>
  <ViewCounter slug={slug} />
  <div class="text-gray-500 mb-6">
    {post.data.pubDate &&
      <time datetime={post.data.pubDate.toISOString()} class="text-sm">
        {post.data.pubDate.toLocaleDateString()}
      </time>
    }
  </div>

  {post.data.description &&
    <p class="text-lg text-gray-700 mb-8 italic">{post.data.description}</p>
  }

  <div class="mt-6">
    <Content />
  </div>
</article>
---
import Header from "@/layouts/v01/Header.astro";
import Footer from "@/layouts/v01/Footer.astro";
import "@/layouts/v01/_styles.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

---
// Header component (shared across pages)
import Link from "@/components/Link.astro";
import SearchModal from "@/layouts/v01/SearchModal.astro";
---

<header class="bar">
  <div class="header-container">
    <!-- Logo/Title Section -->
    <div class="logo-section">
      <h1 class="text-xl font-medium"><Link href="/">My Astro Blog</Link></h1>
    </div>

    <!-- Center Section: Search Icon and Modal -->
    <SearchModal />

    <!-- Right Section: Social Links -->
    <div class="flex items-center gap-6">
      <!-- Social Links -->
      <div>
        <Link href="https://github.com/yourusername" external title="GitHub" class="mr-4">
          GitHub
        </Link>
        <Link href="https://twitter.com/yourusername" external title="Twitter">
          Twitter
        </Link>
      </div>
    </div>
  </div>
</header>

<style>
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .logo-section {
    flex: 1;
  }
</style>
